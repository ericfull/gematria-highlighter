{
  "manifest_version": 3,
  "name": "Gematria Highlighter",
  "description": "Calculate Gematria values of highlighted text using the four base ciphers.",
  "version": "1.1",
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "pref.html",
    "default_icon": "images/icon32.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
